<div class="container">
  <table class="table table-striped table-info">
    <thead>
      <tr>
        <th scope="col">Название</th>
        <th scope="col">Описание</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @brands.each do |brand| %>
      <tr>
        <th scope="row"><%= brand.name %></th>
        <td><%= brand.description %></td>
        <td>
          <%= link_to 'Изменить', edit_brand_path(brand), class: "btn btn-warning" %>
          <%= link_to 'Удалить', brand_path(brand), method: :delete, data: {confirm: 'Вы уверены?'}, class: "btn btn-danger" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex flex-row-reverse bd-highlight">
    <div class="p-2 bd-highlight"><%= link_to 'Назад', root_path, class: 'btn btn-secondary' %></div>
    <div class="p-2 bd-highlight"><%= link_to 'Добавить брэнд', new_brand_path, class: 'btn btn-warning' %></div>
  </div>
</div>

